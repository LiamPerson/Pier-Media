{
  "name": "node-pier",
  "version": "1.0.0",
  "description": "NodeJS Raspberry Pi Home Server",
  "main": "server.js",
  "scripts": {
    "client": "cd client && npm run start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
