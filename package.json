  "bugs": {
    "url": "https://github.com/YeloPartyHat/Node-Pier/issues"
  },
  "homepage": "https://github.com/YeloPartyHat/Node-Pier#readme",
  "dependencies": {
    "express": "^4.18.1",
    "express-sslify": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.19.1"
  }
}
